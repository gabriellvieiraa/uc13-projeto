generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model user {
  id        Int       @id @defalt(autoincrement())
  nome      String    @defalt("Rodolfo")
model User {
  id                Int             @id @default(autoincrement())
  type              String?         @map("type(teacher, admin, director)")
  name              String
  cpf               String          @unique
  email             String          @unique
  status            String?
  birthDate         DateTime?       @map("birth_date")
  userCompanies     UserCompany[]
  categoriesOnUsers CategoryOnUser[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

}
  @@map("users")
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  cnpj        String
  foundation  DateTime
  places      String
  fundaments  String
  methods     String

  courses     Course[]   // relação 1:N (uma empresa tem vários cursos)

  createdAt DataTime  
  updateAt    DataTime  @updateAt
  
}


}



model Category {
  id                Int         @id @defalt(autoincrement())
  name              String      
  urlImg            String      @map("url_img")
  description       String
  courses           Course[]
  users             User[]
}


model Course{
  id             Int         @id @defalt(autoincrement())
  name           String
  description    String
  workload       Float?
  ranking        Int
   
  categories     Category[]  @relation("category_course")
  companies      Company[]   @relation("")


  createdAt      Datetime    @defalt(now())
  updatedAt      Datetime    @updatedAt

}


