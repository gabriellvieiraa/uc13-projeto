generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model user {
  id        Int       @id @defalt(autoincrement())
  nome      String    @defalt("Rodolfo")

  createAT Datetime @defalt(now())
  updateAT Datetime @updateAT
}




model Category {
  id                Int         @id @defalt(autoincrement())
  name              String      
  urlImg            String      @map("url_img")
  description       String
  courses           Course[]
  users             User[]
}


model Course{
  id             Int         @id @defalt(autoincrement())
  name           String
  description    String
  workload       Float?
  ranking        Int
   
  companyId      Int         @map("company_id")
  categoryId     Int         @map("category_id")
  

  createdAt      Datetime    @defalt(now())
  updatedAt      Datetime    @updatedAt

}


