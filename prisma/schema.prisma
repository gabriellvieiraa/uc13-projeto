generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model user {
  id        INT       @id @defalt(autoincrement())
  nome      String    @defalt("Rodolfo")

  createAT Datetime @defalt(now())
  updateAT Datetime @updateAT
}




model Category {
  id                Int         @id @defalt(autoincrement())
  name              String      
  urlImg            String      @map("url_img")
  description       String
  courses           Course[]
  users             User[]
}

