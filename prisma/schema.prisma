generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserType {
  TEACHER
  ADMIN
  DIRECTOR
}

enum UserStatus {
  ATIVO
  INATIVO
}

model User {
  id                Int             @id @default(autoincrement())
  type              UserType?
  name              String
  cpf               String          @unique
  email             String          @unique
  status            UserStatus?
  birthDate         DateTime?       @map("birth_date")



  companies         Company[]       @relation("user_company") 
  categories        Category[]      @relation("user_category") 



  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@map("users")
}


model Company {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  cnpj          String        @unique
  foundation    DateTime      
  places        String
  fundaments    String
  methods       String

  users         User[]        @relation("user_company")
  courses       Course[]    


  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}


model Category {
  id                Int         @id @default(autoincrement())
  name              String      @unique
  urlImg            String      @map("url_img")
  description       String
  courses           Course[]    @relation("category_course")
  users             User[]      @relation("user_category") 
  
  @@map("categories")

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  
}




model Course{
  id             Int         @id @default(autoincrement())
  name           String      @unique
  description    String
  workload       Float?
  ranking        Int
  fieldOfStudy   String     @map("Field_of_study")
   
  categories     Category[]  @relation("category_course")
  companyId       Int        @map("company_id")
  company         Company    @relation(fields: [companyId], references: [id])

  
  @@map("courses")



  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

}